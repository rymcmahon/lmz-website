<%= form_for :client, url: clients_path, html: { class: "form-inline" } do |f| %>
   
  <% if @client.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@client.errors.count, "error") %> prohibited
      this client from being saved:
    </h2>
    <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Health History Form</h3>
    </div>
    <div class="panel-body">
      <div class="form-blocks"><legend>Name</legend>
        <div class="form-group">
          <%= f.label :first_name, class: "sr-only" %>
          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name"  %>
        </div>
        <div class="form-group">
          <%= f.label :middle_initial, class: "sr-only" %>
          <%= f.text_field :middle_initial, class: "form-control", placeholder: "Middle Initial" %>
        </div>
        <div class="form-group">
          <%= f.label :last_name, class: "sr-only" %>
          <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name"  %>
        </div>
      </div>
      <div class="form-blocks"><legend>Personal Info</legend>
        <div class="form-group">
          <%= f.label :date_of_birth, class: "sr-only"  %>
          <%= f.text_field :date_of_birth, class: "form-control", placeholder: "Birthdate yyyy-mm-dd" %>
        </div>
        <div class="form-group">
          <%= f.label :height, class: "sr-only"  %>
          <%= f.text_field :height, class: "form-control", placeholder: "Height" %>
        </div>
        <div class="form-group">
          <%= f.label :weight, class: "sr-only"  %>
          <%= f.text_field :weight, class: "form-control", placeholder: "Weight" %>
        </div>
        <div class="form-group">
          <%= f.select(:gender, options_for_select([['Male'], ['Female']]), {:prompt => "Select Gender"}, { class: 'form-control' })%>
        </div>
      </div>
      <div class="form-blocks"><legend>Contact</legend>
       	<div class="form-group">
          <%= f.label :address, class: "sr-only"  %>
          <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
        </div>
        <div class="form-group">
          <%= f.label :city, class: "sr-only"  %>
          <%= f.text_field :city, class: "form-control", placeholder: "City" %>
        </div>
        <div class="form-group">
          <%= f.select(:state, us_states, {:prompt => "Select State"}, { class: 'form-control'}) %>
        </div>
        <div class="form-group">
          <%= f.label :zip, class: "sr-only"  %>
          <%= f.text_field :zip, class: "form-control", placeholder: "Zip" %>
        </div>
        <div class="stacked-inputs">
          <div class="form-group">
            <%= f.label :home_phone, class: "sr-only"  %>
            <%= f.text_field :home_phone, class: "form-control", placeholder: "Home Phone" %>
          </div>
          <div class="form-group">
            <%= f.label :work_phone, class: "sr-only"  %>
            <%= f.text_field :work_phone, class: "form-control", placeholder: "Work Phone" %>
          </div>
          <div class="form-group">
            <%= f.label :physician, class: "sr-only"  %>
            <%= f.text_field :physician, class: "form-control", placeholder: "Physician" %>
          </div>
          <div class="form-group">
            <%= f.label :referred_by, class: "sr-only"  %>
            <%= f.text_field :referred_by, class: "form-control", placeholder: "Referred By" %>
          </div>
          <div class="stacked-inputs">
            <div class="form-group">
              <%= f.label :emergency_contact_name, class: "sr-only"  %>
              <%= f.text_field :emergency_contact_name, class: "form-control", placeholder: "Emergency Contact Name" %>
            </div>
             <div class="form-group">
              <%= f.label :emergency_contact_phone, class: "sr-only"  %>
              <%= f.text_field :emergency_contact_phone, class: "form-control", placeholder: "Emergency Contact Phone" %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-blocks"><legend>Lifestyle</legend>
        <div class="form-group">
          <%= f.label :exercise_frequency, class: "sr-only" %>
          <%= f.text_field :exercise_frequency, class: "form-control", placeholder: "Exercise Frequency"  %>
        </div>
        <div class="form-group">
          <%= f.label :exercise_type, class: "sr-only" %>
          <%= f.text_field :exercise_type, class: "form-control", placeholder: "Exercise Type"  %>
        </div>
      </div>
      <div class="form-blocks"><legend>Diet</legend>
        <div class="form-group">
          <%= f.label :breakfast, class: "sr-only" %>
          <%= f.text_field :breakfast, class: "form-control", placeholder: "Breakfast" %>
        </div>
        <div class="form-group">
          <%= f.label :lunch, class: "sr-only"  %>
          <%= f.text_field :lunch, class: "form-control", placeholder: "Lunch" %>
        </div>
        <div class="stacked-inputs">
          <div class="form-group">
            <%= f.label :dinner, class: "sr-only"  %>
            <%= f.text_field :dinner, class: "form-control", placeholder: "Dinner" %>
          </div>
          <div class="form-group">
            <%= f.label :snack, class: "sr-only"  %>
            <%= f.text_field :snack, class: "form-control", placeholder: "Snacks" %>
          </div>
        </div>
      </div>
      <div class="form-blocks"><legend>Caffeine</legend>
        <div class="form-group">
          <%= f.select(:drink_coffee, options_for_select([['Yes'], ['No']]), {:prompt => "Drink Coffee?"}, { class: 'form-control' })%>
        </div>
        <div class="form-group">
          <%= f.select(:drink_tea, options_for_select([['Yes'], ['No']]), {:prompt => "Drink Tea?"}, { class: 'form-control' })%>
        </div>
        <div class="form-group">
          <%= f.select(:drink_cola, options_for_select([['Yes'], ['No']]), {:prompt => "Drink Cola?"}, { class: 'form-control' })%>
        </div>
        <div class="form-group">
          <%= f.select(:drink_other_caffeine, options_for_select([['Yes'], ['No']]), {:prompt => "Drink other Caffeine?"}, { class: 'form-control' })%>
        </div>
        <div class="form-group">
          <%= f.label :caffeine_cups, class: "sr-only"  %>
          <%= f.text_field :caffeine_cups, class: "form-control", placeholder: "Cups per Day" %>
        </div>
      </div>
      <div class="form-blocks"><legend>Alcohol</legend>
        <div class="form-group">
          <%= f.select(:alcohol_consumption, options_for_select([['Yes'], ['No']]), {:prompt => "Do You Drink Alcohol?"}, { class: 'form-control' })%>
        </div>
        <div class="form-group">
          <%= f.label :alcohol_type, class: "sr-only"  %>
          <%= f.text_field :alcohol_type, class: "form-control", placeholder: "Type of Alcohol" %>
        </div>
        <div class="form-group">
          <%= f.select(:drinks_per_week, options_for_select([['None'], ['1-3'], ['4-6'], ['7-9'], ['10+']]), {:prompt => "Drinks per Week"}, { class: 'form-control' })%>
        </div>
        <div class="form-group">
          <%= f.select(:alcohol_abuse, options_for_select([['Yes'], ['No']]), {:prompt => "Is your drinking a concern?"}, { class: 'form-control' })%>
        </div>
      </div>
      <div class="form-blocks"><legend>Smoking</legend>
        <div class="form-group">
          <%= f.select(:smoking_habit, options_for_select([['Yes'], ['No']]), {:prompt => "Do You Smoke?"}, { class: 'form-control' })%>
        </div>
         <div class="form-group">
          <%= f.label :smoking_substance, class: "sr-only"  %>
          <%= f.text_field :smoking_substance, class: "form-control", placeholder: "Smoking Substance" %>
        </div>
        <div class="stacked-inputs">
          <div class="form-group">
            <%= f.label :years_smoker, class: "sr-only"  %>
            <%= f.text_field :years_smoker, class: "form-control", placeholder: "How many years have you smoked?" %>
          </div>
          <div class="form-group">
            <%= f.label :year_quit, class: "sr-only"  %>
            <%= f.text_field :year_quit, class: "form-control", placeholder: "What year did you quit?" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<div>
    <%= f.submit "Submit Form", class: "btn btn-primary btn-lg"%>
  </div>
<% end %>



        