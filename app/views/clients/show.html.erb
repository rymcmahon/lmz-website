<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Client Health History Profile</h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3"><p><strong>Name: </strong> <%= "#{@client.first_name} #{@client.middle_initial} #{@client.last_name}" %></p></div>
      <div class="col-md-3"><p><strong>Gender: </strong><%= @client.gender %></p></div>
      <div class="col-md-3"><p><strong>Date of Birth: </strong><%= @client.date_of_birth %></div>
      <div class="col-md-3"><p><strong>Height: </strong><%= @height_feet %> ft. <%= @height_inches %> inches</p></div>
    </div>
    <p><strong>Weight: </strong><%= @client.weight %></p>
    <p><strong>Address: </strong><%= @client.address %></p>
    <p><strong>Home Phone: </strong><%= @client.home_phone %></p>
  </div>
</div>
