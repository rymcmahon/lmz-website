<div class="container">
  <h3 class="devise-header">Please Log In</h3>
  <div class="jumbotron jumbotron-devise">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<div class="form-group">
  <%= f.label :email, class: "devise-label" %>
  <%= f.email_field :email, autofocus: true, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :password, class: "devise-label" %>
  <% if @minimum_password_length %>
  <em class="devise-label">(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, class: "devise-label" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
</div>
<% if devise_mapping.rememberable? -%>
  <div class="form-group">
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me, class: "devise-label" %>
  </div>
<% end -%>

  <div class="actions form-group">
    <%= f.submit "Log in", class: "btn btn-primary"  %>
  </div>
<% end %>
<div class="login-link">
<%= render "devise/shared/links" %>
</div>
</div>
</div>